<h1>New Application for Pet Adoption</h1>

<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.number_field :address %>

  <%= f.label :address %>
  <%= f.number_field :address %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>
  
  <%= f.submit "Submit Application"%>
<%= end %>
