<%= form_with url: "/applications", method: :post, local: true do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :address, 'Street Address' %>
<%= f.text_field :address %>
<%= f.label :city %>
<%= f.text_field :city %>
<%= f.label :state %>
<%= f.text_field :state %>
<%= f.label :zip_code, 'Zip Code' %>
<%= f.text_field :zip_code %>
<%= f.submit 'Submit Application' %>
<% end %>
