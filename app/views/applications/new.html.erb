<h1>New Application</h1>

<%= form_with url: "/applications", method: :post, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :street_address, 'Street Address' %>    
    <%= f.text_field :street_address %>
    <%= f.label :city %>    
    <%= f.text_field :city %>
    <%= f.label :state %>    
    <%= f.text_field :state %>
    <%= f.label :zip_code, 'Zip Code' %>    
    <%= f.text_field :zip_code, required: true %>
    <%= hidden_field_tag 'status', 'In Progress' %>

    <%= f.submit "Submit" %>
<% end %>
