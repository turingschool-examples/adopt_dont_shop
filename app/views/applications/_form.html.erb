<%= form_with model: model, method: method, local: true do |f| %>
  <div class="form-floating mb-3">
    <%= f.text_field :name, class: "form-control", id: "floatingInput1", placeholder: 'Name' %>
    <%= f.label :name, for: "floatingInput1" %>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_field :address, class: "form-control", id: "floatingInput2", placeholder: 'Address' %>
    <%= f.label :address, for: "floatingInput2" %>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_field :city, class: "form-control", id: "floatingInput3", placeholder: 'City' %>
    <%= f.label :city, for: "floatingInput3" %>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_field :state, class: "form-control", id: "floatingInput4", placeholder: 'State' %>
    <%= f.label :state, for: "floatingInput4" %>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_field :zipcode, class: "form-control", id: "floatingInput5", placeholder: 'Zipcode' %>
    <%= f.label :zipcode, for: "floatingInput5" %>
  </div>

  <%= f.submit 'Submit Application', class: 'btn btn-primary' %>
<% end %>
