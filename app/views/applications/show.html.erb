Application Details<br>
<br>
Name: <%= @application.name %><br>
Full Address: <%= @application.full_address %><br>
Description: <%= @application.description %><br>
Status: <%= @application.status %><br><br>
<u>Pets Applied For:</u><br>
<% @application.pets.each do |pet| %>
<p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></p>
<% end %>

<% if @application.status == "In Progress" %>
  <%= render 'applications/add_pet'%>
  <% end %>

<% if @application.status == "In Progress" && @application.pets.count > 0 %>
  <%= render 'applications/submit_application'%>
<% end %>
