<h1><%= "#{@application.name}'s Application" %></h1>
<p>Address: <%=
  "#{@application.street_address},
  #{@application.city},
  #{@application.state}
  #{@application.zip_code}"
  %></p>
<p>Describe why you would make a good home:
  <%= @application.description %></p>
<p>Application Status:
  <%= @application.status %></p>
<p>Pets applied for:
<p><% @application.pets.each do |pet| %></p>
  <%= link_to "#{pet.name}", "/pets/#{pet.id}"%>
<% end %>

<h3 class="pet-search">Add a Pet to this Application</h3>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
<%= f.label :search, "Search by name" %>
<%= f.text_field :search %>
<%= f.submit "Search" %> </p>
<% end %>
<% if params[:search].present? %>
  <% @pets.each do |pet| %>
  <p><%= pet.name %></p>
  <% end %>
<% end %>
