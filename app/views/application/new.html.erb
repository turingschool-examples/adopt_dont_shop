<h1>New Pet Application</h1>

<%= form_with url: "/applications/", method: :post, local:true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.hidden_field :status, value: "In Progress" %>
  <%= f.submit "Submit"%>
<% end %>