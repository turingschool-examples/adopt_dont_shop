<h1>Application for: <%= @application.last %>, <%= @application.first %></h1>
<p>Address: <%= @application.street %>, <%= @application.city %>, <%= @application.state %>, <%= @application.zip %></p>
<p>Desctiption: <%= @application.description %></p>
<p>Pets to Adopt: <% @application.pets.each do |pet| %>
                    <%= pet.name %>
                  <% end%> </p>
<p>Add a pet to this Application:</p><br>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Submit" %>
<% end %>
<p>Search Results:</p>
<% if @pets != nil %>
  <% @pets.each do |pet| %>
    <p><%= pet.name %></p>
  <% end %>
<% end %>
<p>Application Status: <%= @application.status %></p>