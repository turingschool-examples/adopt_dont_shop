<!DOCTYPE html>
<%= stylesheet_link_tag 'adopt_dont_shop.css'%>
<html>
  <head>
    <title>Adopt, Don't Shop</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <section>
      <%= link_to "Applications", "/applications" %>
      <%= link_to "Pets", "/pets" %>
      <%= link_to "Shelters", "/shelters" %>
      <%= link_to "Veterinarians", "/veterinarians" %>
      <%= link_to "Veterinary Offices", "/veterinary_offices" %>
    </section>
    <%= yield %>
  </body>
</html>
