<h1>Admin View: Application from <%= @application.last %>, <%= @application.first %></h1>

<p>Address: <%= @application.street %>, <%= @application.city %>, <%= @application.state %>, <%= @application.zip %></p>
<p>Desctiption: <%= @application.description %></p>
<p>Pets to Adopt:</p>
             <p><% @application.pets.each do |pet| %>
                  <%= pet.name %>
                  <% if pet.application_pets.find {|app_pet| app_pet.application_id == @application.id}.accept == nil %>
                    <%= button_to "Approve", "/admin/applications/#{@application.id}", method: :patch, params: { approve_reject: true, pet_id: pet.id } %>
                  <% elsif pet.application_pets.find {|app_pet| app_pet.application_id == @application.id}.accept == true %>
                    <%= "Approved" %>
                  <% elsif pet.application_pets.find {|app_pet| app_pet.application_id == @application.id}.accept == false %>
                    <%= "Rejected" %>
                  <% end %>
                <% end%> </p>
<p>Application Status: <%= @application.status %></p>