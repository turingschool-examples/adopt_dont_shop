<h1>All pets</h1>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>


<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>Age: <%= pet.age %></p>
  <p>Breed: <%= pet.breed %></p>
  <p>Adoptable: </p>
  <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
  <p><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %></p>
  <p><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></p>
  <p><%= link_to "Start an Application for #{pet.name}", "/pets/#{pet.id}/applications/new" %></p>
<% end %>
