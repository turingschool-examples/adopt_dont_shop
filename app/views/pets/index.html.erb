<h1>All Pets</h1>
<br>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>
<br>

<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>Age: <%= pet.age %></p>
  <p>Breed: <%= pet.breed %></p>
  <p>Adoptable: </p>
  <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
  <%= link_to "About #{pet.name}", "/pets/#{pet.id}" %> | 
  <%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %> |
  <%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
  <br><br>
<% end %>
