<div class="d-flex align-items-center justify-content-center">
  <h1>New Vet Office</h1>
</div>

<%= form_with url: '/veterinary_offices', local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :boarding_services%>
  <%= f.check_box :boarding_services %>

  <%= f.label :max_patient_capacity %>
  <%= f.number_field :max_patient_capacity %>

  <%= f.submit %>
<% end %>
